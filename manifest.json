{
    "manifest_version": 2,
    "name": "ScrapBee",
    "version": "2.2.12",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "icons": {
	"64": "icons/bee.png"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'; navigation-to 'filesystem:'",
    "permissions": [
        "activeTab",
        "contextMenus",
        "downloads",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "file:///*",
        "http://*/*",
        "https://*/*",
        "menus",
        "nativeMessaging",
        "notifications"
    ],
    "applications": {
        "gecko": {
            "id": "scrapbee@scrapbee.org",
            "strict_min_version": "60.0"
        }
    },
    "sidebar_action": {
        "default_title": "ScrapBee",
        "default_panel": "main.html",
        "default_icon": "icons/bee.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
	"default_icon": {
	    "16": "icons/bee.png",
	    "32": "icons/bee.png"
	},
        "default_title": "ScrapBee",
        "default_popup": "popup/browser_action.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost/*",
                "https://localhost/*"
            ],
            "css": [
                "edit.css"
            ],
            "js": [
                "libs/jquery-3.3.1.js",
                "proto.js",
                "marker.js",
                "edit.js"
            ]
        }
    ],
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
    },
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+B",
                "linux": "Ctrl+Shift+B",
                "mac": "MacCtrl+Shift+B"
            },
            "description": "Toggle ScrapBee Sidebar"
        }
    }
}
